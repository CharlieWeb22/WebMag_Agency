{% extends 'base.html.twig' %}

{% block title %}inscription{% endblock %}

{% block body %}
<div id="register_container" class="container mt-5 px-5 py-5">
    <h1 class="h3 mb-3 font-weight-normal text-uppercase">Inscrivez-vous</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button class="btn btn-info float-right mb-3" type="submit">S'inscrire</button>
    {{ form_end(registrationForm) }}
    
</div>
{% endblock %}
