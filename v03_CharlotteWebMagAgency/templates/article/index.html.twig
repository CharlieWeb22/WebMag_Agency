{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
<body>
    <div class="container">
        <div class"row">
            <h1 class="col-lg-12 text-uppercase text-center my-3">Les Articles du blog</h1>
            <hr>
        </div>
        <div class="album py-5">
            <div class="container">
                <div class="row">
                    {% for article in articles %}
                    <div class=" col-12 col-md-4 mb-3">
                        <div class="card h-100 d-inline-block mb-4 shadow-sm">
                            <!--Card Header-->
                            <img src="{{ asset('img/') }}{{ article.featuredImage }}" alt="" class="card-img-top" alt="..."
                            style="width:100; height:250px; object-fit:cover;">
                                <div class="card-body">
                                    <h4 class"card-title">{{ article.titre }}</h4>
                                </div>
                                <a class="btn btn-secondary my-2 mx-2 float-right" href="{{ path('actualites_article_show', {'id': article.id}) }}">Lire la suite</a>
                        </div>
                    </div> 
                     {% endfor %}       
                 </div>  
            </div>
      </div>       
    </div>
</body>

</div>
{% endblock %}